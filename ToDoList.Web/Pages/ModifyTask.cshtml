@page
@using ToDoList.Web.Pages
@model ModifyTaskModel
@{
}
<form method="post" asp-page-handler="Save">
    <label for="title">Title</label><br />
    <input type="text" asp-for="Task.Title" /><br />
    <label for="description">Description</label><br />
    <textarea asp-for="Task.Description"></textarea><br />
    <label for="task-date">Deadline</label><br />
    <input type="date" asp-for="Task.TaskDate" /><br />
    <label for="is-done">Mark as done</label><br />
    <input type="checkbox" asp-for="Task.IsDone" /><br />
    <input type="hidden" asp-for="Task.Id" />
    <button type="submit">Save task</button>
</form>
